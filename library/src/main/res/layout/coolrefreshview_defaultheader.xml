<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:background="#989898">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coolrefresh_defaultheader_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/coolrefresh_defaultheader_textView"
            android:layout_toStartOf="@+id/coolrefresh_defaultheader_textView"
            android:src="@drawable/coolrefreshview_down" />

        <ImageView
            android:id="@+id/coolrefresh_defaultheader_progress_imageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/coolrefresh_defaultheader_textView"
            android:layout_toStartOf="@+id/coolrefresh_defaultheader_textView"
            android:src="@drawable/coolrefreshview_down"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coolrefresh_defaultheader_textView"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:minWidth="140dp"
            android:text="下拉刷新"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>
</FrameLayout>